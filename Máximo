Funcion max<-CalcularMaximo(num1,num2) 
	//Arriba max es la variable de retorno, CalcularMaximo es el nombre, y lo que está entre paréntesis es el argumento
	Definir max Como Entero;
	Si num1>num2 Entonces
		max<-num1;
	SiNo
		max<-num2;
	FinSi
FinFuncion
//Se termina la función y comienza el algoritmo principal
Algoritmo Maximo
	Escribir "Programa para mostrar el máximo de dos números";
	Definir numero1,numero2,num_maximo Como Entero;
	Escribir sin saltar "Dime el número1:";
	Leer numero1;
	Escribir sin saltar "Dime el número2:";
	Leer numero2;
	num_maximo<-CalcularMaximo(numero1,numero2); //el orden en que los pongas van a estar en la función 
	Escribir "El máximo es ",num_maximo;
FinAlgoritmo
